<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppelApi"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAllLines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="All lines"/>

        <Button
            android:id="@+id/btnLineInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:text="Info line"
            android:backgroundTint="@color/colorPrimary"/>
        <!---->
        <Button
            android:id="@+id/btnSchedules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="10sp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Schedules" />

        <Button
            android:id="@+id/btnStations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stations"
            android:textSize="10sp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPrimary"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/testPicto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/lineInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:hint="NumÃ©ro de la ligne"
        />
    <!--android:hint="Type de transport (metros/rers/tramways/buses/noctiliens)" -->

    <EditText
        android:id="@+id/stationInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="invisible"
        android:hint="Nom de la station" />

    <Button
        android:id="@+id/btnSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher"
        android:visibility="invisible"
        android:backgroundTint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>