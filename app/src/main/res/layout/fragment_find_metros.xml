<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".find.metros.FindMetros"
    android:orientation="vertical">

      <TextView
          android:id="@+id/text_metro"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Choisissez une ligne"
          android:textSize="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="30dp"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/find_all_metro_rv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="5dp"/>

      <TextView
          android:id="@+id/text_metro2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Liste des stations sur cette ligne :"
          android:textSize="20dp"
          android:layout_marginLeft="10dp"
          android:layout_marginTop="30dp"/>

      <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/find_all_stations_rv"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginTop="15dp"
          android:layout_marginLeft="5dp"
          android:layout_marginBottom="?attr/actionBarSize"/>


</LinearLayout>