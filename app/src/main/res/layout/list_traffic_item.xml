<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

    <TextView
        android:id="@+id/lineTrafficTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lineName"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/logoTrafficImageView"
        android:layout_marginStart="30dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/logo_metro"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trafficStateTitle"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/trafficStateResultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:layout_marginLeft="5dp"
            android:textSize="17sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detailTrafficTitle"
            android:textSize="17sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/trafficMessageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messageTraffic"
            android:layout_marginLeft="5dp"
            android:textSize="17sp" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="----------------------------------------------------------------------------------------------"/>



</LinearLayout>